<%= form_with model: @meal do |form| %>
  <div>
    <%= form.label 'Titel' %><br>
    <%= form.text_field :title, autofocus: true %>
    <% @meal.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label 'Notizen' %><br>
    <%= form.text_area :notes %>
    <% @meal.errors.full_messages_for(:notes).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
